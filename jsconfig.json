	"compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
		"target": "es6",
		"module": "commonjs",
		"allowSyntheticDefaultImports": true
	},
	"exclude": [
		"node_modules",
		"bower_components",
		"jspm_packages",
		"tmp",
		"temp"
	]
}
